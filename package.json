{
  "name": "talpa",
  "license": "MIT",
  "version": "0.0.6",
  "author": "Alain <yinxulai@hotmail.com.com>",
  "description": "基于 Electron 的图片格式转换工具",
  "scripts": {
    "start": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "dist:all": "yarn run dist --x64 -wml",
    "dist:win": "yarn run dist --x64 -w",
    "dist:linux": "yarn run dist -l",
    "dist:mac": "yarn run dist -m"
  },
  "electronWebpack": {
    "main": {
      "sourceDirectory": "source/server"
    },
    "renderer": {
      "webpackConfig": "webpack.js",
      "sourceDirectory": "source/front"
    }
  },
  "build": {
    "productName": "Talpa",
    "artifactName": "talpa-${version}.${ext}",
    "appId": "com.yinxulai.talpa",
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "yinxulai",
        "repo": "talpa"
      }
    ],
    "extraResources": [
      "assets/**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "com.yinxulai.talpa",
      "icon": "assets/mac/logo.icns",
      "darkModeSupport": true
    },
    "win": {
      "icon": "assets/win/logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Talpa",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "talpa-${version}.${ext}",
      "unicode": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "icon": "assets/linux/logo",
      "target": [
        "deb"
      ],
      "category": "com.yinxulai.talpa"
    }
  },
  "eslintConfig": {
    "extends": [
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true,
      "es2020": true,
      "browser": true
    },
    "globals": {
      "__static": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "semi": [
        1,
        "never"
      ],
      "@typescript-eslint/ban-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-empty-interface": 0,
      "@typescript-eslint/member-delimiter-style": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "no-unused-vars": [
        1,
        {
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "dependencies": {
    "@sentry/electron": "1.3.0",
    "address": "^1.1.2",
    "autobind-decorator": "^2.4.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.2.5",
    "file-type": "^14.1.4",
    "heic-decode": "^1.1.1",
    "jpeg-js": "^0.4.4",
    "omggif": "^1.0.10",
    "pngjs": "^3.4.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-pitaya": "^0.0.14",
    "react-transition-group": "^4.3.0",
    "source-map-support": "^0.5.16",
    "universal-analytics": "^0.4.20",
    "update-electron-app": "^1.5.0",
    "utif": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^13.9.3",
    "@types/pngjs": "^3.4.2",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/webpack-env": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "css-loader": "^3.4.2",
    "electron": "8.2.0",
    "electron-builder": "22.4.1",
    "electron-webpack": "^2.8.0",
    "electron-webpack-eslint": "^5.1.0",
    "electron-webpack-ts": "^4.0.0",
    "eslint-plugin-react": "^7.19.0",
    "less": "^3.11.1",
    "less-loader": "^5.0.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-hot-loader": "4.12.18",
    "source-map-support": "^0.5.16",
    "style-loader": "^1.1.3",
    "typescript": "^3.7.4",
    "webpack": "4.41.5"
  }
}
