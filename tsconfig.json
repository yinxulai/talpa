{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "typeRoots": [
      "types"
    ]
  },
  "include": [
    "types/*",
    "source/**/*.ts",
    "source/**/*.d.ts",
    "source/**/*.tsx",
    "source/**/*.vue"
  ]
}
